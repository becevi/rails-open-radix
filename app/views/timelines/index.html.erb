<h1> <span style="color: green"><%= current_user.name.downcase %>'s</span> timelines</h1>
<hr>


<div class="timeline-grid mb-3">


 <%  @timelines.each do |timeline| %>
  <div class="timeline-card">
    <%= link_to timeline_path(timeline), class: "timeline-link" do  %>
    <h3> <%= timeline.topic %></h3>
    <div class="articles-number">
      <h6 style="color: green">
         <%= timeline.saved_articles.count %> <%= "article".pluralize(timeline.saved_articles.count) %></h6>
    </div>
   <% end %>
  </div>
  <% end %>

</div>
<%= link_to "Back to search", root_path, class: "btn btn-ireland-outline btn-small" %>
