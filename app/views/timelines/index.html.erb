<h1> <span style="color: green"><%= current_user.name.downcase %>'s</span> timelines</h1>
<hr>


<div class="timeline-grid mb-3">


 <%  @timelines.each do |timeline| %>
  <div class="timeline-card">
    <h3> <%= timeline.topic %> </h3>
    <h6><%= timeline.saved_articles.count %> articles</h6>
    <%= link_to "View timeline", timeline_path(timeline), class: "btn btn-ireland btn-block mb-1" %>

  </div>
  <% end %>

</div>
<%= link_to "Back to search", root_path, class: "btn btn-ireland btn-small" %>
