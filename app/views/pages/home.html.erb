
  <div class="heading-container">

    <h1><span id="typed"></span></h1>
    <%= form_tag articles_path, class: "form-inline", method: :get do %>

          <%= text_field_tag :query,
          params[:query],
          class: "form-control search-input mr-1 radius-1px",
          autocomplete: "off",
          placeholder: "Get the original source of your news..."
          %>


      <%= button_tag(type: "Submit", class: "btn") do  %>
      <i class="fas fa-search"></i>
      <% end %>
      <% end %>
      <div class="search-instructions-card mt-3">
      <ul>
        <li><strong>Search instructions:</strong></li>
        <br>
        <li>Add a "+" before each search term to require that term in the article headline</li>
        <br>
        <li class="example-search"><em>Example: +Jacob Blake +Police</em></li>
      </ul>
    </div>
  </div>




