
<div class="d-flex flex-row">
  <div class="topic-timeline">
  <% if @timeline %>
    <h3><%= @timeline.topic=%></h3>
  <% end %>
  </div>
  <div class="edit-delete-btn ml-3 mb-5">
    <%= link_to edit_timeline_path do %>
    <i class="far fa-edit"></i>
    <% end %>
    <%= link_to timeline_path(@timeline),
      method: :delete,
      data: { confirm: 'Are you sure you want to delete your timeline?'} do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  </div>
</div>


<div class="show-list">
  <% if @timeline %>
  <%  @timeline.saved_articles.reverse.each do |saved_article| %>
  <div class="d-flex flex-row justify-content-between">
     <div class="article-name mb-3">
      <%= link_to  saved_article.article.article_url, class: "article-link" do %>
      <%= saved_article.article.title %>
     </div>
     <div class="article-date">
     <%= saved_article.article.published_at %>
     </div>
      <div class="share-buttons d-flex flex-row">
        <div class="twitter-share m-1">
           <a class="twitter-share-button"
             href="https://twitter.com/intent/tweet?text=<%= URI.encode(saved_article.article.article_url) %>">
             <i class="fab fa-twitter-square"></i>
           </a>
        </div>

      <div class="facebook-share m-1"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=<%=saved_article.article.article_url%>" class="fb-xfbml-parse-ignore"><i class="fab fa-facebook-square"></i></a></div>



     </div>
     <div class="delete-article-btn m-1">
      <%= link_to saved_article_path(saved_article.id),
        method: :delete,
        data: { confirm: 'Remove article from timeline?'} do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
     </div>

     <% end %>
  </div>
  <hr class="show-rule">
  <% end %>
<% end %>
</div>


